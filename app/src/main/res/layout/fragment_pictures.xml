<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ly.supermvp.widget.ProgressLayout
        android:id="@+id/list_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/list_swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_pictures"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary_background_color"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/material_16dp"
                android:paddingTop="@dimen/material_16dp"></android.support.v7.widget.RecyclerView>

        </android.support.v4.widget.SwipeRefreshLayout>
    </com.ly.supermvp.widget.ProgressLayout>

</LinearLayout>